
@{
    ViewData["Title"] = "ManagerUserReport";
	Layout = "_LayoutAdminPage";
}
@using Bookington_FE.Models.ResponseModel;
@model UserReportResponse
<section>
<div id="ManageUserReport" class="tabcontent" style="display:block">
			  <h3>Manage Report</h3>
			  <table id="example" class="table table-striped" style="width:100%">
					  <thead>
						  <tr>
							  <th>ID</th>
							  <th>User Name</th>
							  <th>Reporter Name</th>
							  <th>Content</th>
							  <th>Is Reponded</th>
							  <th>Action</th>
						

						  </tr>
					  </thead>
					  <tbody>
				@foreach (var item in Model.result)
                        {
                                <tr>
                                  <th>@item.Id</th>
                                  <th>@item.RefUserName</th>
                                  <th>@item.ReporterCourtName</th>
                                  <th>@item.Content</th>
								  <th>
										@if (item.IsResponded == true)
										{
											<p>Responded</p>
										}
										else
										{
											<p>Not Response</p>
										}
								  </th>
						<th><button class="btn btn-primary"> Ban </button></th>
								  </tr>
						}
					  </tbody>
					  
				  </table>
    </div>
</section>
